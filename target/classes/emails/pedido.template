<html>
    <body>
    	<meta charset="utf-8"/>    	
        <table>
            <tr>
                <td style="width: 100px">Numero:</td>
                <td>$pedido.id</td>
            </tr>
            <tr>
                <td>Cliente:</td>
                <td>$pedido.cliente.nome</td>
            </tr>
            <tr>
            	<td>Endere√ßo:</td>
            	<td>$pedido.cliente.enderecos.logradouro</td>
            </tr>
            <tr>
                <td>Valor total:</td>
                <td>$numberTool.format("R$ #0.00", $pedido.valorTotal, $locale)</td>
            </tr>
        </table>
        
        <br/>
        <table border="1" cellspacing="0" cellpadding="3">
            <tr>
                <th>Produto</th>
                <th>Valor unitario</th>
                <th>Quantidade</th>
                <th>Valor total</th>
            </tr>
            #foreach ($item in $pedido.itens)
            	#if ($item.produto.id)
	            <tr>
	                <td>$item.produto.nome</td>
	                <td>$numberTool.format("R$ #0.0000", $item.produto.valorUnitario, $locale)</td>
	                <td>$item.quantidade</td>
	                <td>$numberTool.format("R$ #0.0000", $item.valorTotal, $locale)</td>
	            </tr>
	            #end
            #end
        </table>
    </body>
</html>